<h1 class="mb-4">Questions</h1>

<%= link_to "New question", new_question_path, class: "btn btn-primary btn-lg" %>

<% @questions.each do |question| %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= question.title %></h4>
      <section class="card-text">
        <time datetime="<%= question.formatted_creation_time %>">
          <small><%= question.formatted_creation_time %></small>
        </time>

        <p class="my-2">
          <%= question.body %>
        </p>
      </section>

      <%= link_to "Show", question_path(question), class: 'btn btn-primary' %> |
      <%= link_to "Edit", edit_question_path(question), class: 'btn btn-secondary' %>
      <div class="my-2">
        <%= button_to "Destroy", question, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </article>
<% end %>