<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_creation_time %>">
  <%= @question.formatted_creation_time %>
</time>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to "Show", question_path(@question), class: 'btn btn-primary' %> |
<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-secondary' %>
<div class="my-2">
  <%= button_to "Destroy", @question, method: :delete, class: 'btn btn-danger' %>
</div>

<hr class="my-3">

<h2>Write your answer</h2>

<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit answer!", class: 'btn btn-primary' %>
<% end %>

<h2 class="mt-5">Answers</h2>

<% @answers.each do |answer| %>
  <time datetime="<% answer.formatted_creation_time %>">
    <%= answer.formatted_creation_time %>
  </time>

  <p>
    <%= answer.body %>
  </p>
<% end %>